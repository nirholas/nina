# bnbchain-mcp environment variables
# Copy to .env and fill in values as needed

# Required for write operations (swap, deploy, transfer, staking)
PRIVATE_KEY=

# Server port (for HTTP/SSE modes, default: 3001)
PORT=3001

# CORS origins for HTTP mode (comma-separated, default: *)
# CORS_ORIGINS=http://localhost:3000,https://myapp.example.com

# Optional API keys for enhanced market data
COINGECKO_API_KEY=
COINSTATS_API_KEY=
LUNARCRUSH_API_KEY=
CRYPTOCOMPARE_API_KEY=
UNIVERSAL_CRYPTO_API_KEY=

# Sperax module â€” Arbitrum RPC
ARBITRUM_RPC_URL=

# Logging (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO
