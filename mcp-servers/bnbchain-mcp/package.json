  "repository": {
    "type": "git",
    "url": "git+https://github.com/nirholas/bnbchain-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/nirholas/bnbchain-mcp/issues"
  },
  "homepage": "https://github.com/nirholas/bnbchain-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "viem": "^2.0.0",
    "@bnb-chain/greenfield-js-sdk": "^2.0.0",
    "zod": "^3.22.0",
